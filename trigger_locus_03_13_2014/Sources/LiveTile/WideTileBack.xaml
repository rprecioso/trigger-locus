<UserControl x:Class="trigger_locus_03_13_2014.Sources.LiveTile.WideTileBack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="691">

    <Canvas x:Name="LayoutRoot">
        <Grid>
            <Image x:Name="backImage" Width="691" Height="336" HorizontalAlignment="Right" Stretch="None" />
            <TextBlock x:Name="backText"
                   TextWrapping="Wrap" 
                   Width="640"
                   HorizontalAlignment="Center"
                   Foreground="Black" 
                   FontSize="48" 
                   FontFamily="Segoe WP SemiLight" />
        </Grid>
    </Canvas>
</UserControl>